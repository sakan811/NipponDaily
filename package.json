  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@nuxt/test-utils": "^3.20.1",
    "@tailwindcss/vite": "^4.1.17",
    "@types/node": "^24.10.1",
    "@vitejs/plugin-vue": "^6.0.2",
    "@vitest/coverage-v8": "4.0.10",
    "@vue/test-utils": "^2.4.6",
    "eslint": "^9.39.1",
